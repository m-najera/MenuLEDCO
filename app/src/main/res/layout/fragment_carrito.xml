<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/pv_iv_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:contentDescription="Product Image"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2sp"
            android:text="Nombre"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pv_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2sp"
            android:text="Descripcion"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textSize="10sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:paddingBottom="4sp"
                        android:text="Disponible:"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:paddingBottom="4sp"
                        android:text="Precio:"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pv_tv_dispon"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:paddingBottom="5sp"
                        android:text="30"
                        android:textAlignment="center"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/pv_tv_precio"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:paddingBottom="5sp"
                        android:text="$1999.00"
                        android:textAlignment="center"
                        android:textSize="10sp" />
                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/pv_btn_info"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="Agregar"
                android:scaleType="center"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/ic_info"
                android:tint="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:paddingBottom="4sp"
                        android:text="Cantidad:"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:paddingBottom="4sp"
                        android:text="Subtotal:"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/pv_et_cantidad"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="0dp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:padding="0dp"
                        android:paddingEnd="10dp"
                        android:text="1"
                        android:textSize="10dp"
                        android:textAlignment="textEnd" />

                    <TextView
                        android:id="@+id/pv_tv_subtotal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:paddingBottom="5sp"
                        android:text="$1999.00"
                        android:textAlignment="center"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:id="@+id/pv_btn_remove"
                android:layout_width="28dp"
                android:background="#ff3737"
                android:layout_height="match_parent"
                android:contentDescription="Agregar"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:scaleType="center"
                android:layout_gravity="bottom"
                android:src="@drawable/icons8_delete"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
